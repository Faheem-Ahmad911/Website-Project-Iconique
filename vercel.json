{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "PORT": "3000",
    "GMAIL_USER": "@GMAIL_USER",
    "GMAIL_PASS": "@GMAIL_PASS",
    "OWNER_EMAIL": "@OWNER_EMAIL"
  }
}
